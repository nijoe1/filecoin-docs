{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["ES2015"],
    "types": ["node"],
    "outDir": "./dist/plugin",
    "rootDir": "./src/plugin",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["src/plugin/**/*"],
  "exclude": ["node_modules"]
}
